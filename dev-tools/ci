#!/bin/bash
# This script is used as a single command to run the x-pack-kibana tests.
#

# Include the setup steps that sit in a seperate script beside this one.
source "$(dirname ${BASH_SOURCE[0]})/ci_setup"

# output the commands
set -xuf

# clean
gradle --stacktrace clean

# Actually run the tests
gradle check

# Confirm that building the project works
gradle assemble

# ~*~ shell-script-mode ~*~
